<h1 class="title"><%= @product.title %></h1>
<%= image_tag @product.photo if @product.photo.attached? %>
<p class="description"><%= @product.description %></p>

<span class="price"><%= @product.price %></span>

<%= link_to t('.edit'), edit_product_path(@product) if @product.owner? %>
<%= link_to t('.delete'), product_path(@product), data: { turbo_method: :delete, turbo_confirm: t('common.confirm') } if @product.owner? %>
<p><%= link_to t('.view_more_products', username: @product.user.username), user_path(@product.user.username) %></p>

<%= link_to t('❤️'), favorites_path(product_id: @product.id), data: { turbo_method: :post } %>
<p><%= link_to 'volver', products_path %></p>
